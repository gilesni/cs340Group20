<body>
 {{> header}}
  <main class="container">

    <div class="form">
      <h1>Create New Customer Reward</h1>
      <h3 class="input-text">Discount/Reward</h3>
      <input id="rewardordis" type="text" placeholder="Discount/Reward">

      <h3 class="input-text">Reward Description</h3>
      <textarea rows = "5" cols ="50" id = "desc"></textarea>
      <h3 class="input-text">Associated Restaurant</h3>
      <select id="rid">
        <option value="" selected disabled hidden>Choose Restaurant</option>
        {{#each restaurant}}
          <option value="{{rid}}">{{name}}</option>
        {{/each}}
      </select>
      <input id="rewardcreate" type="submit" value="Create">
    </div>

    <div class="form">
      <h1>Search Customer Rewards for a Restaurant</h1>
      <h3 class="input-text">Select a Restaurant</h3>
      <select id="srid">
        <option value="" selected disabled hidden>Choose Restaurant</option>
        {{#each restaurant}}
          <option value="{{rid}}">{{name}}</option>
        {{/each}}
      </select>
      <input id="searchr" type="submit" value="Search">
    </div>

  </main>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="/cr.js"></script>
</body>
