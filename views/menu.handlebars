<body>
  {{> header}}
  <main class="container">
    <div class="form">
      <h1>Create New Menu</h1>
      <h3 class="input-text">Menu ID</h3>
      <input id="menu-id" type="text" placeholder="Menu ID">
      <h3 class="input-text">Choose Manager ID</h3>
      <select id="mcreate">
        <option value="" selected disabled hidden>Choose Manager</option>
        {{#each manager}}
          <option value="{{managerid}}">{{name}}</option>
        {{/each}}
      </select>
      <input id="menu-create" type="submit" value="Create Menu">
    </div>

    <div class="form">
      <h1>Add Dish to Menu</h1>
      <h3 class="input-text">Choose a Dish</h3>
      <select id="did">
        <option value="" selected disabled hidden>Choose Dish</option>
        {{#each dish}}
          <option value="{{did}}">{{name}}</option>
        {{/each}}
      </select>
      <h3 class="input-text">Choose Menu</h3>
      <select id="menu-dish">
        <option value="" selected disabled hidden>Choose Menu</option>
        {{#each menu}}
          <option>{{mid}}</option>
        {{/each}}
      </select>
      <input id="menud-add" type="submit" value="Add Dish to Menu">
    </div>

    <div class="form">
      <h1>Set Restaurant's Menu</h1>
      <h3 class="input-text">Choose Restaurant</h3>
      <select id="rset">
        <option value="" selected disabled hidden>Choose Restaurant</option>
        {{#each restaurant}}
          <option value="{{rid}}">{{name}}</option>
        {{/each}}
      </select>
      <h3 class="input-text">Choose Menu</h3>
      <select id="menus-id">
        <option value="" selected disabled hidden>Choose Menu</option>
        {{#each menu}}
          <option>{{mid}}</option>
        {{/each}}
      </select>
      <input id="menu-set" type="submit" value="Set Menu">
    </div>

  </main>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
  <script src="/menu.js"></script>
</body>
